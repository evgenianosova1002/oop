<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project5.MainPage"
             Title="Products">

    <VerticalStackLayout Padding="20">
        <Label Text="Products List"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center" />

        <Grid x:Name="ProductsGrid" RowSpacing="5" ColumnSpacing="5" />

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="10">
            <Button x:Name="AddButton" Text="Add Product" Clicked="OnAddProduct" />
            <Button x:Name="RemoveButton" Text="Remove Product" Clicked="OnRemoveProduct" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
